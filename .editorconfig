# ===================================================================
# FireShot 项目 - EditorConfig 配置
# ===================================================================
# https://editorconfig.org
# ===================================================================

root = true

# ===========================
# 默认配置（所有文件）
# ===========================
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# ===========================
# Python 文件
# ===========================
[*.py]
indent_size = 4
max_line_length = 88

# ===========================
# Shell 脚本
# ===========================
[*.sh]
indent_size = 2
end_of_line = lf

# ===========================
# YAML/配置文件
# ===========================
[*.{yml,yaml}]
indent_size = 2

[*.toml]
indent_size = 2

[*.json]
indent_size = 2

# ===========================
# Markdown
# ===========================
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# ===========================
# Makefile
# ===========================
[Makefile]
indent_style = tab
